{
  "name": "open-telemetry/opentelemetry-auto-laravel",
  "description": "OpenTelemetry auto-instrumentation for Laravel",
  "keywords": ["opentelemetry", "otel", "open-telemetry", "tracing", "laravel", "instrumentation"],
  "type": "library",
  "homepage": "https://opentelemetry.io/docs/php",
  "readme": "./README.md",
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-opentelemetry": "*",
    "composer-runtime-api": "^2.0",
    "laravel/framework": ">=6.0",
    "open-telemetry/opentelemetry": "dev-spi/autoinstrument as 1.x-dev",
    "tbachert/spi": "^0.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3",
    "guzzlehttp/guzzle": "*",
    "laravel/tinker": "*",
    "nunomaduro/collision": "*",
    "open-telemetry/sdk": "^1.0",
    "orchestra/testbench": ">=4.0",
    "phan/phan": "^5.0",
    "php-http/mock-client": "*",
    "phpstan/phpstan": "^1.1",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.18.4",
    "spatie/laravel-ignition": "*",
    "vimeo/psalm": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "OpenTelemetry\\Contrib\\Instrumentation\\Laravel\\": "src/"
    },
    "files": [
      "_register.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OpenTelemetry\\Tests\\Contrib\\Instrumentation\\Laravel\\": "tests/"
    }
  },
  "extra": {
    "spi": {
      "OpenTelemetry\\API\\Instrumentation\\InstrumentationInterface": ["OpenTelemetry\\Contrib\\Instrumentation\\Laravel\\LaravelInstrumentation"]
    }
  },
  "config": {
    "lock": false,
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": false,
      "tbachert/spi": true
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/ChrisLightfootWild/opentelemetry-php.git"
    }
  ]
}
