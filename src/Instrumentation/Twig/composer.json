{
  "name": "cmelius/opentelemetry-auto-twig",
  "description": "OpenTelemetry Twig Instrumentation",
  "type": "library",
  "license": "Apache-2.0",
  "homepage": "https://github.com/cmelius",
  "keywords": ["opentelemetry", "otel", "open-telemetry", "tracing", "twig", "instrumentation"],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "open-telemetry/api": "^1.6",
    "twig/twig": "^2.0 || ^3.0"
  },
  "autoload": {
    "psr-4": {
      "OpenTelemetry\\Contrib\\Instrumentation\\Twig\\": "src/"
    },
    "files": [
      "_register.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OpenTelemetry\\Contrib\\Instrumentation\\Twig\\": "src/"
    }
  }
}
